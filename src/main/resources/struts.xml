<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <constant name="struts.objectFactory" value="spring" />


    <!-- 常數設定 -->
    <constant name="struts.multipart.maxSize" value="2097152000" />
    <constant name="struts.action.extension" value="action,do,," />

    <!-- ✅ 只留一個共用 package -->
    <package name="default" extends="struts-default">

        <!-- ✅ 攔截器統一放這 -->
        <interceptors>
            <interceptor name="authenticationInterceptor" class="com.example.interceptor.AuthenticationInterceptor" />
            <interceptor-stack name="globalStack">
                <interceptor-ref name="authenticationInterceptor" />
                <interceptor-ref name="fileUpload" />
                <interceptor-ref name="modelDrivenStack" />
            </interceptor-stack>

            <!-- 登入用單純的 stack -->
            <interceptor-stack name="loginStack">
                <interceptor-ref name="modelDrivenStack" />
                <interceptor-ref name="fileUpload" />
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="globalStack" />

        <!-- ✅ 全域通用結果 -->
        <global-results>
            <result name="login" type="dispatcher">/WEB-INF/member/login.jsp</result>
            <result name="error" type="dispatcher">/WEB-INF/member/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error" />
        </global-exception-mappings>

        <!-- ✅ 所有 action 都統一放這 -->

        <!-- 🔹 商品列表 (首頁) -->
        <action name="ProductList" class="com.example.action.ProductAction" method="list">
            <result name="success">/WEB-INF/product/ProductList.jsp</result>
        </action>

        <!-- 🔹 商品詳細頁 -->
        <action name="findById" class="com.example.action.ProductAction" method="findById">
            <result name="success">/WEB-INF/product/ProductDetail.jsp</result>
        </action>

        <!-- 🔹 新增商品 -->
        <action name="add" class="com.example.action.ProductAction" method="add">
            <result name="success" type="redirect">ProductList</result>
        </action>

        <!-- 🔹 修改商品 -->
        <action name="update" class="com.example.action.ProductAction" method="update">
            <result name="success" type="redirect">ProductList</result>
        </action>

        <!-- 🔹 刪除商品 -->
        <action name="delete" class="com.example.action.ProductAction" method="delete">
            <result name="success" type="redirect">ProductList</result>
        </action>

        <!-- 🔹 登入 -->
        <action name="login" class="com.example.action.LoginAction" method="doLogin">
            <interceptor-ref name="loginStack" />
            <result name="success" type="redirectAction">
                <param name="actionName">ProductList</param>
                <param name="namespace">/</param>
            </result>
            <result name="input">/WEB-INF/member/login.jsp</result>
        </action>

        <!-- 🔹 註冊畫面 -->
        <action name="register" class="com.example.action.RegisterAction" method="register">
            <result name="input">/WEB-INF/member/register.jsp</result>
        </action>

        <!-- 🔹 註冊存檔 -->
        <action name="save" class="com.example.action.RegisterAction" method="save">
            <result name="success" type="redirectAction">
                <param name="actionName">ProductList</param>
                <param name="namespace">/</param>
            </result>
            <result name="input">/WEB-INF/member/register.jsp</result>
            <result name="error" type="redirect">/error.jsp</result>
        </action>

        <!-- 🔹 登出 -->
        <action name="logout" class="com.example.action.HomeAction" method="logOut">
            <result name="input">/WEB-INF/member/login.jsp</result>
        </action>

        <!-- 🔹 上傳失敗 -->
        <action name="upload" class="com.example.action.HomeAction" method="upload">
            <result>/WEB-INF/error.jsp</result>
        </action>

        <!-- 🔹 上傳畫面 -->
        <action name="to_upload" class="com.example.action.HomeAction" method="toUpload">
            <result name="success">/WEB-INF/views/upload/upload.jsp</result>
        </action>

    </package>

</struts>
